<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaowang.shopping.shop.cart.infrastructure.mapper.CartItemMapper">

    <!-- 购物车项与商品联表查询结果映射 -->
    <resultMap id="CartItemVOMap" type="com.xiaowang.shopping.shop.cart.vo.CartItemVO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_image" property="productImage"/>
        <result column="price" property="price"/>
        <result column="original_price" property="originalPrice"/>
        <result column="count" property="count"/>
        <result column="selected" property="selected" javaType="java.lang.Boolean" jdbcType="INTEGER"/>
        <result column="stock" property="stock"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 查询用户购物车列表（联表查询商品信息） -->
    <select id="listByUserIdWithProduct" resultMap="CartItemVOMap">
        SELECT
            c.id,
            c.user_id,
            c.product_id,
            c.count,
            c.selected,
            c.create_time,
            p.name AS product_name,
            p.main_image AS product_image,
            p.price,
            p.original_price,
            p.stock,
            p.status
        FROM cart c
        LEFT JOIN product p ON c.product_id = p.id
        WHERE c.user_id = #{userId}
          AND c.deleted = 0
          AND (p.deleted = 0 OR p.deleted IS NULL)
        ORDER BY c.create_time DESC
    </select>

    <!-- 查询用户选中的购物车项（联表查询商品信息） -->
    <select id="listSelectedByUserIdWithProduct" resultMap="CartItemVOMap">
        SELECT
            c.id,
            c.user_id,
            c.product_id,
            c.count,
            c.selected,
            c.create_time,
            p.name AS product_name,
            p.main_image AS product_image,
            p.price,
            p.original_price,
            p.stock,
            p.status
        FROM cart c
        LEFT JOIN product p ON c.product_id = p.id
        WHERE c.user_id = #{userId}
          AND c.selected = 1
          AND c.deleted = 0
          AND (p.deleted = 0 OR p.deleted IS NULL)
        ORDER BY c.create_time DESC
    </select>

</mapper>

